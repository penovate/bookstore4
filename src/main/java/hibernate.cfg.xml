<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"https://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory> 
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="hibernate.connection.datasource">java:comp/env/ConnectJndiSQLServer/SystemService</property>
	<!-- 
 <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>

<property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=bookstore;encrypt=false;trustServerCertificate=true</property>

<property name="hibernate.connection.username">owner</property>
<property name="hibernate.connection.password">12345</property>
<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
	 -->
		
		<property name="hibernate.show_sql">true</property> 
		<property name="hibernate.format_sql">true</property>
		
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="bookstore.bean.BooksBean"/>		
		<mapping class="bookstore.bean.Cart"/>		
		<mapping class="bookstore.bean.GenreBean"/>		
		<mapping class="bookstore.bean.OrderItem"/>		
		<mapping class="bookstore.bean.Orders"/>		
		<mapping class="bookstore.bean.ReviewBean"/>		
		<mapping class="bookstore.bean.UserBean"/>		

	</session-factory>
</hibernate-configuration> 
 